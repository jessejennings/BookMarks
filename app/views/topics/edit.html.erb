<h1>Edit Topic</hi>

<div class="col-md-8">
   <%= form_for @topic do |f| %>
     <div class="form-group">
       <h3><%= f.label :name %></h3>
       <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
     </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
</div>
  
<h1><%= @topic.name %></h1>
<% if policy(@topic).update? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <% end %>
  <% if policy(@topic).destroy? %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: btn btn-danger, dta: { confirm: 'Are you sure you want to delete this topic' }
<h1>New Topic</hi>

<div class="col-md-8">
  <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :name %>
       <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
    </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>
</div>


